<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fischer.tp1" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
<icon src="\www\img\icone.png" />

    <name>TP1 1</name>
    <description>TP Pokequizz</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <!-- Point d’entrée -->
    <content src="index.html" />

    <!-- Autorisations de navigation -->
    <allow-navigation href="*" />

    <!-- Autorisation d’accès réseau -->
    <access origin="*" />

    <!-- Intentions explicites -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Préférences utiles -->
    <preference name="AndroidInsecureFileModeEnabled" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="AndroidLaunchMode" value="singleTask" />

    <!-- Plugins nécessaires -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-file" spec="1" />

</widget>
